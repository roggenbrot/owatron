{
  "name": "owatron",
  "productName": "owatron",
  "version": "1.0.0",
  "description": "Linux Desktop App for Outlook Web App",
  "main": "main-process.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roggenbrot/owatron"
  },
  "keywords": [
    "Electron",
    "React",
    "Typescript",
    "Webpack",
    "Outlook"
  ],
  "bugs": {
    "url": "https://github.com/roggenbrot/owatron/issues"
  },
  "homepage": "https://github.com/roggenbrot/owatron#readme",
  "scripts": {
    "build": "NODE_ENV=development && webpack --config=webpack.renderer.js && webpack --config=webpack.main.js",
    "build:main": "NODE_ENV=development && webpack --config=webpack.main.js",
    "build:renderer": "NODE_ENV=development && webpack --config=webpack.renderer.js",
    "dev": "NODE_ENV=development && webpack-dev-server --config=webpack.renderer.js --hot",
    "prod": "NODE_ENV=production && webpack --config=webpack.renderer.js && webpack --config=webpack.main.js",
    "start": "yarn prod && electron ./dist/main-process.js",
    "package": "electron-builder --linux --x64"
  },
  "build": {
    "appId": "com.roggenbrot.${name}",
    "asar": false,
    "directories": {
      "output": "./out",
      "buildResources": "./resources"
    },
    "linux": {
      "target": [
        "AppImage",
        "pacman"
      ]
    }
  },
  "author": "Sascha D.",
  "license": "GPL-3.0",
  "dependencies": {
    "electron-context-menu": "^2.3.0",
    "electron-store": "^6.0.1",
    "fontsource-roboto": "^3.0.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/polyfill": "^7.12.1",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "@babel/preset-typescript": "^7.12.1",
    "@babel/runtime": "^7.12.1",
    "@types/electron-store": "^3.2.0",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "@types/react-dom": "^16.9.9",
    "@types/webpack-env": "^1.15.3",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.2.1",
    "css-loader": "^5.0.0",
    "electron": "^10.1.5",
    "electron-builder": "^22.9.1",
    "html-webpack-plugin": "^5.0.0-alpha.7",
    "node-sass": "^5.0.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^10.0.4",
    "style-loader": "^2.0.0",
    "typescript": "^4.0.5",
    "url-loader": "^4.1.1",
    "webpack": "^5.3.2",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
