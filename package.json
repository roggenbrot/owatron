{
  "name": "owatron",
  "productName": "owatron",
  "version": "1.0.0",
  "description": "Linux Desktop App for Outlook Web App",
  "main": "main-process.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/roggenbrot/owatron"
  },
  "keywords": [
    "Electron",
    "React",
    "Typescript",
    "Webpack",
    "Outlook",
    "Office365",
    "Linux"
  ],
  "bugs": {
    "url": "https://github.com/roggenbrot/owatron/issues"
  },
  "homepage": "https://github.com/roggenbrot/owatron#readme",
  "scripts": {
    "build": "NODE_ENV=production webpack --config=webpack.renderer.js && NODE_ENV=production webpack --config=webpack.main.js",
    "build:main": "NODE_ENV=production webpack --config=webpack.main.js",
    "build:renderer": "NODE_ENV=production && webpack --config=webpack.renderer.js",
    "dev": "concurrently -k \"NODE_ENV=development webpack --config=webpack.main.js --watch\" \"NODE_ENV=development webpack-dev-server --config=webpack.renderer.js --hot\"",
    "start": "yarn build && electron ./dist/main-process.js",
    "package": "yarn build && electron-builder --linux --x64",
    "i18n": "i18next 'src/**/*.{ts,tsx,js,jsx}'"
  },
  "build": {
    "appId": "com.roggenbrot.${name}",
    "directories": {
      "output": "./out",
      "buildResources": "./dist"
    },
    "files": [
      {
        "from": "./",
        "to": "",
        "filter": "package.json"
      },
      {
        "from": "./resources/icons",
        "to": "icons",
        "filter": "*"
      },
      {
        "from": "./resources/locales",
        "to": "locales",
        "filter": "*/**"
      },
      {
        "from": "./dist",
        "to": "",
        "filter": "*"
      }
    ],
    "linux": {
      "icon": "./resources/icons",
      "category": "Office",
      "target": [
        "AppImage",
        "snap",
        "pacman",
        "deb"
      ]
    }
  },
  "author": {
    "name": "Sascha D.",
    "email": "41467575+roggenbrot@users.noreply.github.com"
  },
  "license": "GPL-3.0",
  "dependencies": {
    "@fluentui/react": "^7.153.4",
    "@fluentui/react-theme-provider": "^0.18.0",
    "@hot-loader/react-dom": "^17.0.1",
    "@uifabric/react-hooks": "^7.13.9",
    "electron-context-menu": "^2.3.0",
    "electron-store": "^6.0.1",
    "fontsource-roboto": "^3.0.3",
    "i18next": "^19.8.4",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-hot-loader": "^4.13.0",
    "react-i18next": "^11.7.4",
    "react-use": "^15.3.4"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.12.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.12.1",
    "@babel/plugin-proposal-optional-chaining": "^7.12.7",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@babel/plugin-transform-typescript": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@babel/runtime": "^7.12.5",
    "@types/electron-store": "^3.2.0",
    "@types/i18next-fs-backend": "^1.0.0",
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@types/webpack-env": "^1.16.0",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^6.3.2",
    "core-js": "^3.8.1",
    "css-loader": "^5.0.1",
    "electron": "^11.0.3",
    "electron-builder": "^22.9.1",
    "html-webpack-harddisk-plugin": "^1.0.2",
    "html-webpack-plugin": "^5.0.0-alpha.15",
    "i18next-parser": "^3.3.0",
    "node-sass": "^5.0.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^10.1.0",
    "style-loader": "^2.0.0",
    "typescript": "^4.1.2",
    "url-loader": "^4.1.1",
    "webpack": "^5.10.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  }
}
